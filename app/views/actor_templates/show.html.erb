<h1> Actor <%= @the_actor.id %> details </h1>

<a href="/actors" class= "btn btn-block btn-outline-secondary">
Go back
</a>

<a href="/delete_actor/<% @the_actor.id %>" class = "btn btn-block btn-outline-secondary">
Delete actor</a>

<hr>

<dl>
<dt>
Name 
</dt>

<dd>
<%= @the_actor.name %>
</dd>

<dt>
Dob 
</dt>

<dd>
<%= @the_actor.dob %>
</dd>

<dt>
Bio 
</dt>

<dd>
<%= @the_actor.bio %>
</dd>

<dt>
Image 
</dt>

<dd>
<img src=<%= @the_actor.image %>>

</dd>

<dt>
Created at 
</dt>

<dd>
<%= time_ago_in_words(@the_actor.created_at) %>
</dd>

<dt>
Updated at 
</dt>

<dd>
<%= time_ago_in_words(@the_actor.updated_at) %>
</dd>
</dl>

<h2>
Filmography
<h2>

<table border = "1">
<% @filmography.each do |character| %>
  <tr>
    <td>
      <%= Movie.where( {:id => character.movie_id} ).at(0).title %>
    </td>
    <td>
      <%= Movie.where( {:id => character.movie_id} ).at(0).year%>
    </td>
    <td>
      <%= Director.where( {:id => Movie.where( {:id => character.movie_id} ).at(0).director_id }).at(0).name %>
    </td>
    </td>
    <td>
      <a = href="/movies/<%= Movie.where( {:id => character.movie_id} ).at(0).id %>">
      Show details </a>
    </td>
  </tr>
<% end %>
</table>

